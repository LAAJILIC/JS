const checkMidSeat = function (seat) {
  //B and E are middle seats 
  const s = seat.slice(-1);
  if (s === 'B' || s === 'E') console.log('You got the middle seat ðŸ˜¬');
  else console.log('You got lucky ðŸ˜Ž');
};

checkMidSeat('11B');
checkMidSeat('23C');
checkMidSeat('3E');

